<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:padding="24dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:text="Edit Transaction"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_edit_description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:minHeight="48dp"
        android:hint="Deskripsi"
        android:background="@drawable/rounded_edittext_bg"
        android:inputType="text"/>

    <EditText
        android:id="@+id/et_edit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:hint="Amount"
        android:background="@drawable/rounded_edittext_bg"
        android:inputType="numberDecimal"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/et_edit_tanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/rounded_edittext_bg"
        android:hint="Date"
        android:inputType="date"
        android:focusable="false"
        android:clickable="true"
        android:layout_marginTop="8dp"/>

    <RadioGroup
        android:id="@+id/rg_edit_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext_bg"
        android:layout_marginTop="15dp">
        <RadioButton
            android:id="@+id/rb_edit_income"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Income"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="16dp"/>
        <RadioButton
            android:id="@+id/rb_edit_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense"/>
    </RadioGroup>

    <Spinner
        android:id="@+id/spinner_edit_kategori"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/card_bg"
        android:minHeight="48dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>